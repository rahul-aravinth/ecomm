<div class="product__item">
    <img class="product__item__image" src="img/{{image}}" alt="Product image">
    <div class="product__item__detail">
        <div class="product__item__detail__title">{{ title }}</div>
        <div class="product__item__detail__desc">{{ desc }}</div>
        <div class="product__item__detail__price">{{ price }}</div>
    </div>
    {% include 'button' with modifier: 'primary', title: 'Add to Cart' %}
</div>